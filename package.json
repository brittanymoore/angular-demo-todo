    "scripts": {
        "build": "webpack --env=dev --progress",
        "build:prod": "npm run clean --silent && webpack --env=prod --progress",
        "clean": "rimraf ./dist",
        "lint": "tslint -c ./config/tslint.json --type-check 'src/**/*.ts' -p ./tsconfig.json",
        "start": "webpack-dev-server --env=dev --open --no-info",
        "start:prod": "npm run clean --silent && webpack-dev-server --env=prod --open --no-info",
        "serve": "node server.js",
        "test": "karma start ./config/karma.conf.js ",
        "test:e2e": "protractor ./config/protractor.conf.js",
        "webdriver-manager": "webdriver-manager update --standalone false --gecko false"
    },
