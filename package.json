{
    "name": "angular-demo-todo",
    "version": "1.0.0",
    "description": "A simple app to demonstrate mocking and testing.",
    "scripts": {
        "clean": "rimraf ./dist",
        "build": "webpack --progress --config ./config/webpack.dev.js",
        "build:prod": "npm run clean && webpack --progress --config ./config/webpack.prod.js",
        "start": "webpack-dev-server --config ./config/webpack.dev.js --inline --progress",
        "start:prod": "npm run clean && webpack-dev-server --config ./config/webpack.prod.js --inline --progress",
        "test": "karma start ./config/karma.conf.js ",
        "webdriver-manager": "webdriver-manager update --standalone false --gecko false",
        "test:e2e": "protractor ./config/protractor.conf.js"
    },
    "dependencies": {
        "@angular/animations": "4.0.1",
